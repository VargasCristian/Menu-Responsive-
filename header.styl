.header
    background $black
    color $white
    height 64px
    position fixed
    top 0
    left 0
    width 100%
    z-index 100
    transition .2s all
    
    &-mobile
        display flex
        justify-content space-between
        align-items center
        height 100%
        
    &-logo
        order 1
        margin-left 1rem
        
    &-btn-nav
        order 2
        border 0
        border-radius 5px
        background $black
        margin-right 1rem
        font-size 1.5em

    &-menu-navbar
        background $black

    &-menu-list
        list-style-type none
        height 0
        overflow hidden
        transition .5s all
        
        &--show
            height 280px

        &-item
            a
                text-decoration none
                color $white
                display block    
                padding 1.5em

@media screen and (min-width: 768px)
    .header
        display flex
        justify-content space-between
        flex-wrap wrap
        //height 70px
        
        &-btn-nav
            display none
            
        &-menu-list
            height 64px
            display flex
            align-items center
            
